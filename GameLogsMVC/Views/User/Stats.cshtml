                                else
                                {
                                    <td>@Model.StatsAttended.SingleStats[i].FirstOrDefault().Key[j]</td>
                                }
                            }
                            <td>@Model.StatsAttended.SingleStats[i].FirstOrDefault().Value</td>
                        </tr>
                    }
                </tbody>
            </table>

            <h3>Total Stats</h3>
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>High Stat</th>
                        <th>Player</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.StatsAttended.AccStats.Count(); i++)
                    {
                        <tr>
                            @if (Model.League == "MLB")
                            {
                                switch (i)
                                {
                                    case 0:
                                        <td>Most Hits</td>
                                        break;
                                    case 1:
                                        <td>Most Runs</td>
                                        break;
                                    case 2:
                                        <td>Most Home Runs</td>
                                        break;
                                    case 3:
                                        <td>Most RBIs</td>
                                        break;
                                    case 4:
                                        <td>Most Innings Pitched</td>
                                        break;
                                    case 5:
                                        <td>Most Strikeouts</td>
                                        break;
                                }
                            }
                            else if (Model.League == "NBA" || Model.League == "NCAAB")
                            {
                                switch (i)
                                {
                                    case 0:
                                        <td>Most Points</td>
                                        break;
                                    case 1:
                                        <td>Most Rebounds</td>
                                        break;
                                    case 2:
                                        <td>Most Assists</td>
                                        break;
                                    case 3:
                                        <td>Most Steals</td>
                                        break;
                                    case 4:
                                        <td>Most Blocks</td>
                                        break;
                                }
                            }
                            else if (Model.League == "NFL" || Model.League == "NCAAF")
                            {
                                switch (i)
                                {
                                    case 0:
                                        <td>Most Passing Yards</td>
                                        break;
                                    case 1:
                                        <td>Most Passing TDs</td>
                                        break;
                                    case 2:
                                        <td>Most Rushing Yards</td>
                                        break;
                                    case 3:
                                        <td>Most Rushing TDs</td>
                                        break;
                                    case 4:
                                        <td>Most Receiving Yards</td>
                                        break;
                                    case 5:
                                        <td>Most Receiving TDs</td>
                                        break;
                                    case 6:
                                        <td>Most Interceptions</td>
                                        break;
                                    case 7:
                                        <td>Most Tackles</td>
                                        break;
                                    case 8:
                                        <td>Most Sacks</td>
                                        break;
                                    case 9:
                                        <td>Most Field Goals</td>
                                        break;
                                }
                            }

                            @if (Model.StatsAttended.AccStats[i].FirstOrDefault().Key != null)
                            {
                                <td><a href="@Url.Action("Index", "Player", new { league = Model.League, playerID = @Model.StatsAttended.AccStats[i].FirstOrDefault().Key[1]})">@Model.StatsAttended.AccStats[i].FirstOrDefault().Key[0]</a></td>
                                <td>@Model.StatsAttended.AccStats[i].FirstOrDefault().Value</td>
                            }
                            else
                            {
                                <td>N/A</td>
                                <td>N/A</td>
                            }

                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            @if (Model.League == "Favorites")
            {
                <h2>Favorite Team Total Games</h2>
                @foreach (var teamDict in Model.StatsAttended.FavsCount)
                {
                    <div>
                        @foreach (var kvp in teamDict)
                        {
                            <h4>@kvp.Key: @kvp.Value[0], @kvp.Value[1]</h4>
                        }
                    </div>
                }
                <h2>Favorite Team W-L Record</h2>
                @foreach (var teamDict in Model.StatsAttended.FavsRecord)
                {
                    <div>
                        @foreach (var kvp in teamDict)
                        {
                            <h4>@kvp.Key: @kvp.Value[0], @kvp.Value[1]</h4>
                        }
                    </div>
                }

            }
            else
            {
                <h4>No Games Attended</h4>
            }

        }
    </div>


<script>
    function ChangeLeague(selectedLeague) {
        var newUrl = "/User/Stats?userName=" + encodeURIComponent('@Model.User') + "&league=" + encodeURIComponent(selectedLeague);
        window.location.href = newUrl;
    }

    function ChangeView(selectedView){
        if (selectedView === "Watched") 
        {
            document.getElementById("statsWatched").style.display = "block";
            document.getElementById("statsAttended").style.display = "none";
        } 
        else if (selectedView === "Attended") 
        {
            document.getElementById("statsWatched").style.display = "none";
            document.getElementById("statsAttended").style.display = "block";
        }
    }
</script>

</body>
</html>
