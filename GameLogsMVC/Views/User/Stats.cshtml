                    <tbody>
                        @for (int i = 0; i < Model.StatsWatched.GameStats.Count(); i++)
                        {
                            <tr>
                                @if (i == 0 && Model.League == "MLB")
                                {
                                    <td>Longest Game Attended</td>
                                }
                                else if (i == 1 && Model.League == "MLB")
                                {
                                    <td>Shortest Game Attended</td>
                                }
                                else if (i == 2 || i == 0)
                                {
                                    <td>Highest Scoring Game Attended</td>
                                }
                                else
                                {
                                    <td>Highest Impact Play</td>
                                }
