                                        break;
                                    case 3:
                                        <td>Most Steals</td>
                                        break;
                                    case 4:
                                        <td>Most Blocks</td>
                                        break;
                                }
                            }
                            else if (Model.League == "NFL" || Model.League == "NCAAF")
                            {
                                switch (i)
                                {
                                    case 0:
                                        <td>Most Passing Yards</td>
                                        break;
                                    case 1:
                                        <td>Most Passing TDs</td>
                                        break;
                                    case 2:
                                        <td>Most Rushing Yards</td>
                                        break;
                                    case 3:
                                        <td>Most Rushing TDs</td>
                                        break;
                                    case 4:
                                        <td>Most Receiving Yards</td>
                                        break;
                                    case 5:
                                        <td>Most Receiving TDs</td>
                                        break;
                                    case 6:
                                        <td>Most Interceptions</td>
                                        break;
                                    case 7:
                                        <td>Most Tackles</td>
                                        break;
                                    case 8:
                                        <td>Most Sacks</td>
                                        break;
                                    case 9:
                                        <td>Most Field Goals</td>
                                        break;
                                }
                            }
                        
                            @if (Model.StatsWatched.AccStats[i].FirstOrDefault().Key != null)
                            {
                                <td><a href="@Url.Action("Index", "Player", new { league = Model.League, playerID = @Model.StatsWatched.AccStats[i].FirstOrDefault().Key[1]})">@Model.StatsWatched.AccStats[i].FirstOrDefault().Key[0]</a></td>
                                <td>@Model.StatsWatched.AccStats[i].FirstOrDefault().Value</td>
                            }
                            else
                            {
                                <td>N/A</td>
                                <td>N/A</td>
                            }

                        </tr>
                    }
                </tbody>
            </table>   
        }    
        else
        {
            @if(Model.League == "Favorites")
            {
                <h2>Favorite Team Total Games</h2>
                @foreach (var teamDict in Model.StatsWatched.FavsCount)
                {
                    <div>
                        @foreach (var kvp in teamDict)
                        {
                            <h4>@kvp.Key: @kvp.Value[0], @kvp.Value[1]</h4>
                        }
                    </div>
                }
                <h2>Favorite Team W-L Record</h2>
                @foreach (var teamDict in Model.StatsWatched.FavsRecord)
                {
                    <div>
                        @foreach (var kvp in teamDict)
                        {
                            <h4>@kvp.Key: @kvp.Value[0], @kvp.Value[1]</h4>
                        }
                    </div>
                }

            }
            else
            {
                <h4>No Games Attended</h4>
            }
        
        }
    </div>

