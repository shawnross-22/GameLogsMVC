    <select id="NCAAFteamSelect" onchange="ChangeTeam(this.value, 'NCAAF')">
        @foreach (var item in Model.NCAAFTeams)
        {
            <option value="@($"{item.Name},{item.Url}")" selected="@(Model.FavTeams[3].Name == @item.Name)">@item.Name</option>
