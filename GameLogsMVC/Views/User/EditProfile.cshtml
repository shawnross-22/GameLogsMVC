        <option value="None" selected="@(Model.FavTeams[1].Name == null)">None</option>
    </select>
    <img id="NBAlogo" src="@Model.FavTeams[1].Url" alt="" style="@(Model.User.FavNBA != "None" ? "width: 50px; height: 50px;" : "display: none; width: 50px; height: 50px;")"  />
</div>

